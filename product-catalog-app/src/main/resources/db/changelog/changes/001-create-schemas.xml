<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-service-schema" author="Y_Lab_student">
        <sql>CREATE SCHEMA IF NOT EXISTS service;</sql>
    </changeSet>

    <changeSet id="create-entity-schema" author="Y_Lab_student">
        <sql>CREATE SCHEMA IF NOT EXISTS entity;</sql>
    </changeSet>

    <changeSet id="set-search-path" author="Y_Lab_student">
        <sql>SET search_path TO entity, service;</sql>
    </changeSet>
</databaseChangeLog>
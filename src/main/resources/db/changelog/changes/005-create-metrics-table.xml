<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Индексы для пользователей -->
    <changeSet id="create-user-indexes" author="Y_Lab_student">
        <createIndex tableName="users" schemaName="entity" indexName="idx_users_username">
            <column name="username"/>
        </createIndex>
        <createIndex tableName="users" schemaName="entity" indexName="idx_users_role">
            <column name="role"/>
        </createIndex>
    </changeSet>

    <!-- Индексы для продуктов -->
    <changeSet id="create-product-indexes" author="Y_Lab_student">
        <createIndex tableName="products" schemaName="entity" indexName="idx_products_name">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="products" schemaName="entity" indexName="idx_products_category">
            <column name="category"/>
        </createIndex>
        <createIndex tableName="products" schemaName="entity" indexName="idx_products_price">
            <column name="price"/>
        </createIndex>
    </changeSet>

    <!-- Индексы для корзины -->
    <changeSet id="create-basket-indexes" author="Y_Lab_student">
        <createIndex tableName="user_basket" schemaName="entity" indexName="idx_basket_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="user_basket" schemaName="entity" indexName="idx_basket_product">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

    <!-- Индексы для аудита -->
    <changeSet id="create-audit-indexes" author="Y_Lab_student">
        <createIndex tableName="audit_logs" schemaName="entity" indexName="idx_audit_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="audit_logs" schemaName="entity" indexName="idx_audit_timestamp">
            <column name="timestamp"/>
        </createIndex>
        <createIndex tableName="audit_logs" schemaName="entity" indexName="idx_audit_action">
            <column name="action"/>
        </createIndex>
    </changeSet>

    <!-- Индексы для метрик -->
    <changeSet id="create-metrics-indexes" author="Y_Lab_student">
        <createIndex tableName="user_metrics" schemaName="entity" indexName="idx_metrics_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="user_metrics" schemaName="entity" indexName="idx_metrics_type">
            <column name="metric_type"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-user-seq" author="Y_Lab_student">
        <createSequence
                sequenceName="user_id_seq"
                schemaName="service"
                startValue="1"
                incrementBy="1"
                cacheSize="50"/>
    </changeSet>

    <changeSet id="create-product-seq" author="Y_Lab_student">
        <createSequence
                sequenceName="product_id_seq"
                schemaName="service"
                startValue="1"
                incrementBy="1"
                cacheSize="50"/>
    </changeSet>

    <changeSet id="create-category-seq" author="Y_Lab_student">
        <createSequence
                sequenceName="category_id_seq"
                schemaName="service"
                startValue="1"
                incrementBy="1"
                cacheSize="50"/>
    </changeSet>

    <changeSet id="create-audit-logs-seq" author="Y_Lab_student">
        <createSequence
                sequenceName="audit_logs_seq"
                schemaName="service"
                startValue="1"
                incrementBy="1"
                cacheSize="1000"/>
    </changeSet>
</databaseChangeLog>